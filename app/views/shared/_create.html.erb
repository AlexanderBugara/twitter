  <h6>New Comment</h6>
  <div class="row">
  <div class="col-xs-12">
  <%= form_with(model: [object, Comment.new(content: "")], remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.text_area :comment, rows: 1, class: "form-control", placeholder: "Please enter a comment", autofocus: true %>
      <%= f.submit class: "btn btn-primary btn" %>
    </div>
  </div>
  <% end %>
  